<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="TicketsOverlordPersistenceUnit" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>es.ujaen.dae.ticketoverlord.models.Event</class>
        <class>es.ujaen.dae.ticketoverlord.models.PricePerZone</class>
        <class>es.ujaen.dae.ticketoverlord.models.Ticket</class>
        <class>es.ujaen.dae.ticketoverlord.models.User</class>
        <class>es.ujaen.dae.ticketoverlord.models.Venue</class>
        <class>es.ujaen.dae.ticketoverlord.models.Zone</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="${db.driver}"/>
            <property name="javax.persistence.jdbc.url" value="${db.url}"/>
            <property name="javax.persistence.jdbc.user" value="${db.user}"/>
            <property name="javax.persistence.jdbc.password" value="${db.pass}"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>