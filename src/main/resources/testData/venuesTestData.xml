<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="recintoFerialJaenZonaA" class="es.ujaen.dae.ticketoverlord.models.Zone">
        <property name="name" value="A"/>
        <property name="seats" value="100"/>
    </bean>

    <bean id="recintoFerialJaenZonaB" class="es.ujaen.dae.ticketoverlord.models.Zone">
        <property name="name" value="B"/>
        <property name="seats" value="200"/>
    </bean>

    <bean id="recintoFerialJaenZonaC" class="es.ujaen.dae.ticketoverlord.models.Zone">
        <property name="name" value="C"/>
        <property name="seats" value="300"/>
    </bean>

    <bean id="recintoFerialJaen" class="es.ujaen.dae.ticketoverlord.models.Venue">
        <property name="name" value="IFEJA, Ferias Jaén"/>
        <property name="city" value="Jaén, Jaén"/>
        <property name="address" value="Prolongación Carretera Granada S/N"/>
        <property name="zones">
            <list>
                <ref bean="recintoFerialJaenZonaA"/>
                <ref bean="recintoFerialJaenZonaB"/>
                <ref bean="recintoFerialJaenZonaC"/>
            </list>
        </property>
    </bean>

    <bean id="recintoPlazaTorosJaenZonaA" class="es.ujaen.dae.ticketoverlord.models.Zone">
        <property name="name" value="A"/>
        <property name="seats" value="200"/>
    </bean>
    <bean id="recintoPlazaTorosJaenZonaB" class="es.ujaen.dae.ticketoverlord.models.Zone">
        <property name="name" value="B"/>
        <property name="seats" value="200"/>
    </bean>
    <bean id="recintoPlazaTorosJaenZonaC" class="es.ujaen.dae.ticketoverlord.models.Zone">
        <property name="name" value="C"/>
        <property name="seats" value="300"/>
    </bean>
    <bean id="recintoPlazaTorosJaenZonaD" class="es.ujaen.dae.ticketoverlord.models.Zone">
        <property name="name" value="D"/>
        <property name="seats" value="300"/>
    </bean>

    <bean id="recintoPlazaTorosJaen" class="es.ujaen.dae.ticketoverlord.models.Venue">
        <property name="name" value="Plaza de Toros de Jaén"/>
        <property name="city" value="Jaén, Jaén"/>
        <property name="address" value="Alameda de Capuchinos S/N"/>
        <property name="zones">
            <list>
                <ref bean="recintoPlazaTorosJaenZonaA"/>
                <ref bean="recintoPlazaTorosJaenZonaB"/>
                <ref bean="recintoPlazaTorosJaenZonaC"/>
                <ref bean="recintoPlazaTorosJaenZonaD"/>
            </list>
        </property>
    </bean>

    <bean id="recintoCentroJubiladosZonaA" class="es.ujaen.dae.ticketoverlord.models.Zone">
        <property name="name" value="A"/>
        <property name="seats" value="10"/>
    </bean>

    <bean id="recintoCentroJubilados" class="es.ujaen.dae.ticketoverlord.models.Venue">
        <property name="name" value="Centro de jubilados &quot;La edad de oro&quot;"/>
        <property name="city" value="Úbeda, Jaén"/>
        <property name="address" value="Calle del Sabio 23"/>
        <property name="zones">
            <list>
                <ref bean="recintoCentroJubiladosZonaA"/>
            </list>
        </property>
    </bean>

    <bean id="recintoTeatroLaGlorietaZonaA" class="es.ujaen.dae.ticketoverlord.models.Zone">
        <property name="name" value="A"/>
        <property name="seats" value="100"/>
    </bean>

    <bean id="recintoTeatroLaGlorietaZonaB" class="es.ujaen.dae.ticketoverlord.models.Zone">
        <property name="name" value="B"/>
        <property name="seats" value="50"/>
    </bean>

    <bean id="recintoTeatroLaGlorietaZonaC" class="es.ujaen.dae.ticketoverlord.models.Zone">
        <property name="name" value="C"/>
        <property name="seats" value="50"/>
    </bean>

    <bean id="recintoTeatroLaGlorieta" class="es.ujaen.dae.ticketoverlord.models.Venue">
        <property name="name" value="Teatro La Glorieta"/>
        <property name="city" value="Baeza, Jaén"/>
        <property name="address" value="Calle del Artista 12"/>
        <property name="zones">
            <list>
                <ref bean="recintoTeatroLaGlorietaZonaA"/>
                <ref bean="recintoTeatroLaGlorietaZonaB"/>
                <ref bean="recintoTeatroLaGlorietaZonaC"/>
            </list>
        </property>
    </bean>


    <bean id="recintoTeatroDelInstituto" class="es.ujaen.dae.ticketoverlord.models.Venue">
        <property name="name" value="Teatro del instituto"/>
        <property name="city" value="Jaén, Jaén"/>
        <property name="address" value="Calle del Estudiante 10"/>
        <property name="zones">
            <list></list>
        </property>
    </bean>

    <bean id="recintosTestData" class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                <ref bean="recintoFerialJaen"/>
                <ref bean="recintoPlazaTorosJaen"/>
                <ref bean="recintoCentroJubilados"/>
                <ref bean="recintoTeatroLaGlorieta"/>
                <ref bean="recintoTeatroDelInstituto"/>
            </list>
        </property>
    </bean>

</beans>