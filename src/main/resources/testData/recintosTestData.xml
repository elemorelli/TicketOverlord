<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="recintoFerialJaenZonaA" class="es.ujaen.dae.ticketoverlord.models.Zona">
        <property name="nombre" value="A"/>
        <property name="asientos" value="100"/>
    </bean>

    <bean id="recintoFerialJaenZonaB" class="es.ujaen.dae.ticketoverlord.models.Zona">
        <property name="nombre" value="B"/>
        <property name="asientos" value="200"/>
    </bean>

    <bean id="recintoFerialJaenZonaC" class="es.ujaen.dae.ticketoverlord.models.Zona">
        <property name="nombre" value="C"/>
        <property name="asientos" value="300"/>
    </bean>

    <bean id="recintoFerialJaen" class="es.ujaen.dae.ticketoverlord.models.Recinto">
        <property name="nombre" value="IFEJA, Ferias Jaén"/>
        <property name="localidad" value="Jaén, Jaén"/>
        <property name="direccion" value="Prolongación Carretera Granada S/N"/>
        <property name="zonas">
            <list>
                <ref bean="recintoFerialJaenZonaA"/>
                <ref bean="recintoFerialJaenZonaB"/>
                <ref bean="recintoFerialJaenZonaC"/>
            </list>
        </property>
    </bean>

    <bean id="recintoPlazaTorosJaenZonaA" class="es.ujaen.dae.ticketoverlord.models.Zona">
        <property name="nombre" value="A"/>
        <property name="asientos" value="200"/>
    </bean>
    <bean id="recintoPlazaTorosJaenZonaB" class="es.ujaen.dae.ticketoverlord.models.Zona">
        <property name="nombre" value="B"/>
        <property name="asientos" value="200"/>
    </bean>
    <bean id="recintoPlazaTorosJaenZonaC" class="es.ujaen.dae.ticketoverlord.models.Zona">
        <property name="nombre" value="C"/>
        <property name="asientos" value="300"/>
    </bean>
    <bean id="recintoPlazaTorosJaenZonaD" class="es.ujaen.dae.ticketoverlord.models.Zona">
        <property name="nombre" value="D"/>
        <property name="asientos" value="300"/>
    </bean>

    <bean id="recintoPlazaTorosJaen" class="es.ujaen.dae.ticketoverlord.models.Recinto">
        <property name="nombre" value="Plaza de Toros de Jaén"/>
        <property name="localidad" value="Jaén, Jaén"/>
        <property name="direccion" value="Alameda de Capuchinos S/N"/>
        <property name="zonas">
            <list>
                <ref bean="recintoPlazaTorosJaenZonaA"/>
                <ref bean="recintoPlazaTorosJaenZonaB"/>
                <ref bean="recintoPlazaTorosJaenZonaC"/>
                <ref bean="recintoPlazaTorosJaenZonaD"/>
            </list>
        </property>
    </bean>

    <bean id="recintosTestData" class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                <ref bean="recintoFerialJaen"/>
                <ref bean="recintoPlazaTorosJaen"/>
            </list>
        </property>
    </bean>

</beans>